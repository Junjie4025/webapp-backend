    node {
    def dockerImage
    def githubCredential = '87ce9999-e275-491a-b546-adacbf5ac033'
    def commit_id
	
	stage('Clone repository') {
        /* Cloning the Repository to our Workspace */
        checkout scm
    }
    stage('Build') {
        sh 'mvn -B -DskipTests clean package'
    }
	stage('Building image') {
        commit_id = sh(returnStdout: true, script: 'git rev-parse HEAD')
  		echo "$commit_id"
        dockerImage = docker.build ("${env.registry}")
        
	}
	stage('Registring image') {
        docker.withRegistry( '', "${env.docker_creds}" ) {
            dockerImage.push("$commit_id")
		}
    }
    stage('Clone another repository') {
     /* Cloning the Repository to our Workspace */
        sh 'rm helmChart -rf; mkdir helmChart'
        dir('helmChart') {
            git ( branch: "${env.helmchart_branch}",
                    credentialsId: githubCredential,
                    url: "${env.helmchart_repo}"
                )
            sh "git config --global user.email 'he.jun@husky.neu.edu'"
            sh "git config --global user.name 'junjie'"
            sh 'git config --global push.default current'
            echo "${BUILD_NUMBER}"
            sh "pwd"
            sh "ls"
            updatedVersion= nextVersionFromGit("${env.releaseType}")
            echo "UpdatedVersion"+ updatedVersion
            sh "yq r ./backend/Chart.yaml version"
            sh "yq w -i ./backend/Chart.yaml 'version' ${updatedVersion}"
            sh "yq r ./backend/Chart.yaml version"
            sh "yq w -i ./backend/values.yaml 'imageBackend' ${env.registry}:$commit_id"
            sh('git add --all')
            sh "git commit -m 'Version bump ${updatedVersion}'"
            withCredentials([usernamePassword(credentialsId: githubCredential, passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
            sh('git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/Junjie4025/helm-charts.git jenkins_test')}
        }
    }
}
def nextVersionFromGit(scope) {
        def latestVersion = sh (returnStdout: true, script: 'yq r ./backend/Chart.yaml version')
        def (major, minor, patch) = latestVersion.tokenize('.').collect { it.toInteger() }
        def nextVersion
        switch (scope) {
            case 'major':
                nextVersion = "${major + 1}.0.0"
                break
            case 'minor':
                nextVersion = "${major}.${minor + 1}.0"
                break
            case 'patch':
                nextVersion = "${major}.${minor}.${patch + 1}"
                break
        }
    nextVersion
}